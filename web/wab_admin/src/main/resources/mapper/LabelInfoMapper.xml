<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nanhang.lease.web.admin.mapper.LabelInfoMapper">

    <select id="selectLabelInfoByApartmentId" resultType="com.nanhang.lease.model.entity.LabelInfo">
       select
           type,
           name
       from
           label_info
       where
           is_deleted = 0
       and id in ( select
                       label_id
                   from
                       apartment_label
                   where
                       is_deleted=0
                     and apartment_id = #{id})
    </select>
    <select id="selectByIdDiy" resultType="com.nanhang.lease.model.entity.LabelInfo">
        select
            li.type,
            li.name
            from
                room_label rl
        left join
                    label_info li
        on
         rl.label_id =li.id
        where
            rl.room_id = #{id}
            and rl.is_deleted =0




    </select>
</mapper>
